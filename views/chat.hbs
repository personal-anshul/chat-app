<section class="col-xs-12 section-greeting">
  <h3 class="col-md-10 col-sm-12 hidden-xs">Welcome to {{title}}<sup>&reg;</sup></h3>
</section>
<main class="col-xs-12 main">
  <section class="col-xs-12">
    <article id="messages" class="col-xs-12 message-panel"></article>
  </section>
</main>
<footer class="col-xs-12 footer">
  <section class="form-inline text-right">
    <div class="form-group col-sm-push-3 col-xs-push-1 col-sm-7 col-xs-7">
      <input id="input-message" type="text" autofocus class="input-message form-control col-xs-12" value="" placeholder="Write a message here..."/>
    </div>
    <div class="form-group col-sm-push-3 col-xs-push-1 col-sm-2 col-xs-4">
      <button type="button" name="button"  id="btn-send-message" class="btn btn-primary btn-send-message">Send</button>
    </div>
  </section>
</footer>
{{#if isNewUser}}
<div class="col-xs-12">
  <!-- Modal popup -->
  <section id="userId-popup" class="modal modal-userId fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Please make a note</h4>
        </div>
        <div class="modal-body col-xs-12">
          <p>Dear <strong>{{isNewUser}},</strong>
          <p>Greeting from Windbag.</p><br>
          <p>Here's your user id - <strong>{{loggedInUser}}</strong>. Please make a note as you will be requiring it to login next time.</p><br>
          <small> - Windbag Support Team </small>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary closePopup">Close</button>
        </div>
      </div>
    </div>
  </section>
</div>
{{/if}}
<script>
  $(document).ready(function(){
    $('#userId-popup').modal('show');
  });
</script>
