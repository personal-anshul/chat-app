<section class="col-xs-12 section-greeting">
  <h3 class="col-md-10 col-sm-12 hidden-xs">Welcome to {{title}}</h3>
</section>
<main class="col-xs-12 main">
  <section class="col-xs-12">
    <article id="messages" class="col-sm-10 col-xs-11 message-panel"></article>
  </section>
</main>
<footer class="col-xs-12 footer">
  <section class="form-inline text-right">
    <div class="form-group col-sm-push-3 col-xs-push-0 col-sm-7 col-xs-12">
      <input id="input-message" type="text" class="input-message form-control col-xs-12" value="" placeholder="Write a message here..."/>
    </div>
    <div class="form-group col-sm-push-3 col-xs-push-6 col-sm-2 col-xs-6">
      <button type="button" name="button"  id="btn-send-message" class="btn btn-primary btn-send-message">Send</button>
    </div>
  </section>
</footer>
